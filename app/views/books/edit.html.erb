<p id="notice"></p>
<div class = "container">
  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h1>Editing Book</h1>
    <% if @book.errors.any? %>
    <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>


    <%= form_with model: @book do |f| %>

    <div class="form-group">
      <label for = "inputTitle">Title</label>
      <p><%= f.text_field :title, id:"inputTitle", placeholder:@book.title, class: "form-control book_title" %></p>
    </div>
    <div class= "form-group">
      <label for = "inputOpinion">Opinion</label>
      <p><%= f.text_area :body, placeholder:@book.body, class:"form-control book_body" %></p>
    </div>
    <div class="form-group">
      <%= f.submit "Update Book" ,class:"btn btn-success"%>
    </div>
    <% end %>

    <%= link_to "Show", book_path(@book.id) %>
      |
    <%= link_to "Back", books_path %>
  </div>
 </div>
</div>