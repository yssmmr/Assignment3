<p id="notice"></p>
<div class = "container">
  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <% if @user.errors.any? %>
      <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    <% end %>



    <%= form_with model: @user do |f| %>

      <div class="form-group">
        <label for = "inputName">Name</label>
        <div>
          <%= f.text_field :name, autofocus: true, id:"inputName", class:"form-control" %>
        </div>
      </div>
      <div>
        <label for = "inputImage">Image</label>
        <div>
          <%= f.file_field :profile_image, placeholder: "ファイルの選択", accept:"image/*" %>
        </div>
      </div>
      <div class="form-group">
        <label for = "inputIntroduction">Introduction</label>
        <div>
          <%= f.text_area :introduction, id:"inputIntroduction", id:"inputIntroduction", class:"form-control" %>
        </div>
      </div>
      <div class="form-group">
        <input type="submit" name="commit" value="Update User" class="btn btn-secondary"
              data-disable-with="Update User">
      </div>
    <% end %>
  </div>
 </div>
</div>



